input_time = int(input('Please input the time(S):'))
Hour = input_time // 3600
Minute = input_time % 3600 // 60
Second = input_time % 60
if Hour < 24:
    print(input_time, 'is',Hour,'hours',Minute,'minutes',Second,'seconds')
else:
    Day = Hour // 24
    Hour = Hour % 24
    print(input_time, 'is',Day,'days',Hour,'hours',Minute,'minutes',Second,'seconds')
